<package>
  <description brief="suturo_knowledge_foodreasoner">
	Provides reasoning over edible objects.
  </description>
  <author>Moritz Horstmann</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://www.suturo.de</url>

  <depend package="rosjava_jni"/> <!-- Java in ROS -->
  <depend package="suturo_perception_msgs"/> <!-- Communication with perception -->
  <depend package="geometry_msgs" /> <!-- Dependency of perception_msg, so rosjava can build msg classes -->
  <depend package="json_prolog"/> <!-- Java/Prolog bridge -->
  <depend package="knowrob_common"/>
  <depend package="tfjava"/>
  <depend package="thea"/>

  <export>
    <java classpath="${prefix}/bin"/>
  </export>

</package>


